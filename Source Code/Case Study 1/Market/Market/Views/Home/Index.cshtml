@model Market.ModelView.ProductListlViewModel
@{
    ViewBag.Title = "Home Page";
}

<!--Display Alert-->
@Html.Raw(TempData["message"])

<div class="jumbotron mt-5">
    <!--Section: Products v.2-->
    <!--If Has Product-->
    @if (Model.Products.Count > 0)
    {
        <section class="pb-3">

            <!--Grid row-->
            <div class="row">

                @foreach (var product in Model.Products)
                {
                    <!--Grid column-->
                    <div class="col-lg-4 col-md-12 mb-r">

                        <!--Card-->
                        <div class="card card-cascade wider">

                            <!--Card image-->
                            <div class="view overlay hm-white-slight">
                                <img src="@product.imageURL" class="img-fluid" alt="">
                                <a>
                                    <div class="mask"></div>
                                </a>
                            </div>
                            <!--Card image-->
                            <!--Card content-->
                            <div class="card-body text-center no-padding">
                                <h4 class="card-title">
                                    <strong>
                                        <a href="">@product.name</a>
                                    </strong>
                                </h4>

                                @if (!string.IsNullOrEmpty(product.shortDescription))
                                {
                                    <!--Description-->
                                    <p class="card-text">@product.shortDescription</p>
                                }

                                <!--Card footer-->
                                <div class="card-footer">
                                    <span class="left font-bold">
                                        <strong>@product.price$</strong>
                                    </span>
                                    <span class="right">
                                        <a class="" data-toggle="tooltip" data-placement="top" title="Quick Look">
                                            <i class="fa fa-eye grey-text"></i>
                                        </a>
                                        <a class="" data-toggle="tooltip" data-placement="top" title="Add to Wishlist">
                                            <i class="fa fa-heart grey-text"></i>
                                        </a>
                                    </span>
                                </div>

                            </div>
                            <!--Card content-->

                        </div>
                        <!--Card-->

                    </div>
                    <!--Grid column-->
                }

            </div>
            <!--Grid row-->

        </section>
        <!--Section: Products v.2-->
    }
    else
    {
        <!--Product List is Empty-->
        <h1 class="text-center align-self-center">No Item Found</h1>
    }
</div>