@using Market.ModelView
@model Market.Models.Product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--Display Alert-->
@Html.Raw(TempData["message"])

@{ var account = Session["CurrentUser"] as AccountViewModel; }

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-4 ">
                <img class="w-100" src="@Model.imageURL" />
            </div>
            <div class="col-md-8">

                <h1>@Model.name</h1>

                <h2>@Model.price.ToString("#.##") $</h2>

                @if (account != null && account.RoleId == AccountViewModel.UserRoleId)
            {
                <a class="btn btn-primary" href="@Url.Action("AddProductToCart", "Home", new {productId = Model.id, toHomePage = false})">Add To Cart</a>
                <br />
        }



            </div>
        </div>

    </div>
    <div class="jumbotron">
        @Html.Raw(Model.description)
    </div>
</div>